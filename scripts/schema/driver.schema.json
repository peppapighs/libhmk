{
  "type": "object",
  "properties": {
    "platformio": {
      "type": "object",
      "properties": {
        "board": {
          "type": "string",
          "description": "The PlatformIO board identifier."
        },
        "ldscript": {
          "type": "string",
          "description": "The linker script used for the board."
        },
        "framework": {
          "type": "string",
          "description": "The PlatformIO framework identifier."
        },
        "platform": {
          "type": "string",
          "description": "The PlatformIO platform identifier."
        }
      },
      "required": ["board", "ldscript", "framework", "platform"]
    },
    "tinyusb": {
      "type": "object",
      "properties": {
        "mcu": {
          "type": "string",
          "description": "The MCU identifier for TinyUSB."
        }
      },
      "required": ["mcu"]
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the driver.",
      "properties": {
        "max_adc_resolution": {
          "type": "integer",
          "description": "Maximum ADC resolution supported by the MCU."
        },
        "adc_input_pins": {
          "type": "array",
          "description": "An array of ADC input pin names, sorted by ADC channel index.",
          "items": { "type": "string" }
        }
      },
      "required": ["max_adc_resolution", "adc_input_pins"]
    }
  }
}
